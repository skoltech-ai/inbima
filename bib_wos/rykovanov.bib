@article{ WOS:000424726700022,
Author = {Blinne, Alexander and Schinkel, David and Kuschel, Stephan and Elkina,
   Nina and Rykovanov, Sergey G. and Zepf, Matt},
Title = {{A systematic approach to numerical dispersion in Maxwell solvers}},
Journal = {{COMPUTER PHYSICS COMMUNICATIONS}},
